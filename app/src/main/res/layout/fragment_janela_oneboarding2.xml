<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivSegundaTela"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/oneboarding2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/vSegundaTela"
            android:layout_width="0dp"
            android:layout_height="350dp"
            android:background="@drawable/gradiente_black"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/ivSegundaTela"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvSegundaTela"
            style="@style/Widget.MeuTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agende um horário em uma academia perto de você"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/ivSegundaTela"
            app:layout_constraintTop_toTopOf="@+id/vSegundaTela"
            tools:layout_editor_absoluteX="0dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>